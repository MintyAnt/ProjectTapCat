

<TapCatGame>:
	cat: the_cat
	
    canvas:
        Color:
            rgb: 0.2, 0.8, 0.5
        Rectangle:
            size: self.width, self.height
            
	Label:
		text: "TAPCAT : PROTOTYPE 1"
		pos: (root.center_x, root.top-100)
		
	TheCatWidget:
		id: the_cat
		
    Label:
        font_size: 20
        center_x: root.width / 8
        top: root.top
        text: ("Hapiness: %s" % str(root.cat.Hapiness))
		
    Label:
        font_size: 20
        center_x: root.width / 8
        top: root.top - 20
        text: ("Energy: %s" % str(root.cat.Energy))
		
    Label:
        font_size: 20
        center_x: root.width / 8
        top: root.top - 40
        text: ("Hygine: %s" % str(root.cat.Hygine))
		
    Label:
        font_size: 20
        center_x: root.width / 8
        top: root.top - 60
        text: ("LitterBox: %s" % str(root.cat.LitterBox))
		
<TheCatWidget>:
    pos: 100, 400
    
    canvas:
        Color:
            rgb: 0.7, 0.2, 0
        Rectangle:
            size: 75, 75
            pos: self.pos

	Label:
		text: root.cat_label
		pos: (root.center_x, root.center_y)
	Label:
		text: root.cat_talk_label
		pos: (root.center_x, root.center_y + 10)
            
	