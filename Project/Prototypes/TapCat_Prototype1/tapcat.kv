

<TapCatGame>:
	cat: the_cat
	
    canvas:
        Color:
            rgb: 0.2, 0.8, 0.5
        Rectangle:
            size: self.width, self.height
            
	Label:
		text: "TAPCAT : PROTOTYPE 1"
		pos: (root.center_x, root.height - 100)
		
	TheCatWidget:
		id: the_cat
		
<TheCatWidget>:
    pos: 100, 400
    
    canvas:
        Color:
            rgb: 0.7, 0.2, 0
        Rectangle:
            size: 75, 75
            pos: self.pos

	Label:
		text: root.cat_label
		pos: (root.center_x, root.center_y)
	Label:
		text: root.cat_talk_label
		pos: (root.center_x, root.center_y + 10)
	