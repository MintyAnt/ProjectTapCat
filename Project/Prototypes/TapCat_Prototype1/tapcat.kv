

<TapCatGame>:
	cat: the_cat
	litterBox: the_litterbox
	
    canvas:
        Color:
            rgb: 0.2, 0.8, 0.5
        Rectangle:
            size: self.width, self.height
            
	Label:
		text: "TAPCAT : PROTOTYPE 1"
		pos: (root.center_x, root.top-100)
		
	TheCatWidget:
		id: the_cat
	
	TheLitterBoxWidget
		id: the_litterbox
		
    Label:
        font_size: 20
        center_x: root.width / 8
        top: root.top
        text: ("Hapiness: %s" % str(root.cat.Hapiness))
		
    Label:
        font_size: 20
        center_x: root.width / 8
        top: root.top - 20
        text: ("Energy: %s" % str(root.cat.Energy))
		
    Label:
        font_size: 20
        center_x: root.width / 8
        top: root.top - 40
        text: ("Hygine: %s" % str(root.cat.Hygine))
		
    Label:
        font_size: 20
        center_x: root.width / 8
        top: root.top - 60
        text: ("LitterBox: %s" % str(root.cat.LitterBox))
		
<TheCatWidget>:
    pos: 100, 400
    size: 75, 75
    
    canvas:
        Color:
            rgb: 0.7, 0.2, 0
        Rectangle:
            pos: self.pos
            size: root.size

	Label:
		text: root.cat_label
		pos: (root.center_x, root.center_y)
	Label:
		text: root.cat_talk_label
		pos: (root.center_x, root.center_y + 10)
        
    Image:
    	source: "Cat.png"
    	pos: (root.x - 10, root.y - 10)
        size: (root.width * 1.35, root.height * 1.35)
        keep_ratio: True
        allow_stretch: True

<TheLitterBoxWidget>:
    pos: 500, 50
    size: 150, 150
    
    Image:
    	source: "LitterBox.png"
    	pos: root.pos
    	
    Label:
    	#text: str(root.DisplayLitter)
    	text: ("%d/%d" % (root._LitterCount, root._MaxLitter))
    	#text: str(root._LitterCount) + "/" + str(root._MaxLitter)
        #text: ("%s/%s" % (str(root._LitterCount), str(root._MaxLitter)))
		pos: (root.center_x, root.center_y)
     
	