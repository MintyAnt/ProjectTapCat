			text: str(the_cat.mHapiness)
			pos: self.parent.x - self.parent.width / 2.0, self.parent.y
		Label:
			text: str(the_cat.mHapinessMax)
			pos: self.parent.x + self.parent.width / 2.0, self.parent.y
	
	# LitterBox
