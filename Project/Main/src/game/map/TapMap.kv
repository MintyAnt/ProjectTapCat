<Map>:        
	mCat: the_cat
	mLitterBox: the_litter
	mFoodBowl: the_food
	
    canvas:
        Color:
            rgb: 0.2, 0.8, 0.5
        Rectangle:
            size: self.width, self.height
	
	Image:
    	source: "Rug2.png"
        size: root.size
        allow_stretch: True
        keep_ratio: False
        pos: root.pos
		
	LitterBoxWidget:
		id: the_litter
		pos: 350, 400
		
	FoodBowlWidget
		id: the_food
		pos: 600, 300

	CatWidget:
		id: the_cat
		
	# Bars
	# Energy
	ProgressBar:
		pos: 10, root.top - 70
		value: the_cat.mEnergy
		max: the_cat.mEnergyMax
	
		Label:
			text: "Energy"
			pos: self.parent.x, self.parent.y + 10
		Label:
			text: str(the_cat.mEnergy)
			pos: self.parent.x - self.parent.width / 2.0, self.parent.y
		Label:
			text: str(the_cat.mEnergyMax)
			pos: self.parent.x + self.parent.width / 2.0, self.parent.y
	
	# Hapiness
	ProgressBar:
		pos: 10, root.top - 90
		value: the_cat.mHapiness
