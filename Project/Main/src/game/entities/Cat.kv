<CatWidget>:
    pos: 100, 400
    size: 75, 75
    mEnergy: 10
    
    canvas:
        Color:
            rgb: 0.7, 0.2, 0
        Rectangle:
            pos: self.pos
            size: root.size

	Label:
		text: root.cat_label
		pos: (root.center_x, root.center_y)
	Label:
		text: root.cat_talk_label
		pos: (root.center_x, root.center_y + 10)
	Label:
    	text: ("State: " + root.cat_state_label)
    	pos: (root.center_x, root.center_y + 20)
        
    AnimationController:
    	pos: root.pos
    	mStartingAnimation: "flying"
    	AnimationGraphic:
    		mID: "flying"
    		mSpriteStrip: "shipAnimation.png"
    		mNumFrames: 8
    		mFrameDimensions: 115, 69
    		mAnimateSpeed: .030
 
    #Image:
    	#source: "Cat.png"
    	#pos: (root.x - 10, root.y - 10)
        #size: (root.width * 1.35, root.height * 1.35)
        #keep_ratio: True
        #allow_stretch: True