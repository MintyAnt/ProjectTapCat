<CatWidget>:
	mUtilityBasedAI: mUtilityBasedAI
	
    pos: 100, 400
    size: 75, 75
    mEnergy: 10
    
    canvas:
        Color:
            rgb: 0.7, 0.2, 0
        Rectangle:
            pos: self.pos
            size: root.size

	Label:
		text: root.cat_label
		pos: (root.center_x, root.center_y)
	Label:
		text: root.cat_talk_label
		pos: (root.center_x, root.center_y + 10)
	Label:
    	text: ("State: " + root.cat_state_label)
    	pos: (root.center_x, root.center_y + 20)
        

    Image:
    	source: "tapcat_side.jpg"
    	pos: root.pos
        size: (root.width * 1.35, root.height * 1.35)
        keep_ratio: True
        allow_stretch: True
        
    AnimationController:
    	pos: root.pos
    	mStartingAnimation: "flying"
    	AnimationGraphic:
    		mID: "flying"
    		mSpriteStripSource: "shipAnimation.png"
    		mNumFrames: 8
    		mFrameDimensions: 115, 69
    		mAnimateSpeed: .030
        
    UtilityBasedAI:
    	id: mUtilityBasedAI
    	mDefaultAction: "cat_wander"
    	mActions: "cat_wander", "cat_poop", "cat_sleep", "cat_eat"