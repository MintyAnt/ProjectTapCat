<FoodBowlWidget>:
	size: 100, 100
    Image:
    	source: "CatBowl.jpg"
    	#pos: (root.x - 10, root.y - 10)
    	pos: root.pos
        #size: (root.width * 1.35, root.height * 1.35)
        keep_ratio: True
        allow_stretch: True
        
    Label:
    	text: ("%d/50" % (root.mFoodValue))
		pos: (root.center_x, root.center_y + 10)