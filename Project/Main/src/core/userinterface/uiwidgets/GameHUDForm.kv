<GameHUDForm>:

	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		size: root.size
		
		StackLayout:
			orientation: 'lr-bt'
			size_hint: 1, .2
			
			Button:
				text: "item1"
				size_hint_x: .25
			
			Button:
				text: "item2"
				size_hint_x: .25
			
			Button:
				text: "item3"
				size_hint_x: .25
			
			Button:
				text: "item4"
				size_hint_x: .25
	
	AnchorLayout:
		anchor_x: 'left'
		anchor_y: 'top'
		size: root.size
		
		Button:
			text: "stats area"
			size_hint: .1, .1
	
	AnchorLayout:
		anchor_x: 'right'
		anchor_y: 'top'
		size: root.size
		
		Button:
			text: "cat area"
			size_hint: .1, .1