#: import Animation kivy.animation.Animation

<MenuProfileWidget>:
	orientation: 'tb-rl'
	
	#anim_start: Animation(pos = (0, root.height / 2.0), duration = 1)
	#anim_end: Animation(pos = (root.right, root.height / 2.0), duration = 0)
	#anim_open: anim_start + anim_end
	anim_open: Animation(pos = (0, self.y), duration = 0.5) + Animation(pos = (root.parent.right - root.width, self.y), duration = 0.5)
		
